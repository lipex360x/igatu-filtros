<?php
function {{singularName}}PostQueries($query) {
  if(!is_admin() && $query->is_main_query() && is_post_type_archive('{{singularName}}')) {
    $query->set('orderby', 'title');
    $query->set('order', 'ASC');
    $query->set('posts_per_page', -1);
  }
}
add_action('pre_get_posts', '{{singularName}}PostQueries');